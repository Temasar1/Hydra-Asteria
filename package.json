{
  "name": "hydra-asteria",
  "private": true,
  "workspaces": [
    "backend",
    "offchain"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "copyfiles \"backend/**/*.{json,csv}\" \"offchain/**/*.{json,csv}\" dist",
    "dev": "concurrently \"npm --prefix frontend run dev\" \"tsx -r ./load-env.js backend/index.ts\"",
    "start": "node -r ./load-env.js dist/offchain/index.js",
    "start:backend": "tsx -r ./load-env.js backend/index.ts",
    "start:offchain": "tsx -r ./load-env.js offchain/index.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.7",
    "tsup": "^7.2.0",
    "tsx": "^4.20.5",
    "turbo": "^1.12.0",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "dependencies": {
    "@meshsdk/core": "^1.9.0-beta.73",
    "@meshsdk/core-cst": "^1.9.0-beta.74",
    "@meshsdk/hydra": "^1.9.0-beta.74"
  }
}
